<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="buttonStyle">@style/PrimaryButton</item>
        <item name="editTextStyle">@style/PrimaryEditText</item>
        <item name="android:textViewStyle">@style/PrimaryText</item>
        <item name="progressBarStyle">@style/PrimaryProgressBar</item>
    </style>

    <style name="PrimaryTitle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/darkGray</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>

    <style name="SecundaryTitle" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/mediumGray</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="PrimaryText" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/darkGray</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/comfortaa_light</item>
    </style>


    <style name="PrimaryEditText" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">12sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:minLines">1</item>
        <item name="android:padding">15dp</item>
        <item name="android:drawablePadding">@dimen/dimen_drawable_padding</item>
        <item name="android:background">@drawable/shape_round_borders</item>
    </style>

    <style name="PrimaryButton" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/shape_button</item>
    </style>

    <style name="PrimaryProgressBar" parent="Widget.AppCompat.ProgressBar">
        <item name="android:indeterminateDrawable">@drawable/shape_progress_bar</item>
    </style>

</resources>
