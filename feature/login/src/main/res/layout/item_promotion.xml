<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imageEmployer"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="@dimen/dimen_margin_02"
        android:layout_marginEnd="@dimen/dimen_margin_02"
        android:src="@drawable/ic_person"
        android:layout_marginTop="@dimen/dimen_margin_02"/>

    <TextView
        android:id="@+id/nameEmployer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/imageEmployer"
        app:layout_constraintTop_toTopOf="@id/imageEmployer"
        android:layout_marginStart="@dimen/dimen_margin_02"
        tools:text= "Barbearia do TiÃ£o"
        android:fontFamily="@font/roboto_bold"
        android:textStyle="bold"
        android:layout_marginEnd="@dimen/dimen_margin_02"/>

    <TextView
        android:id="@+id/addresEmployer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/imageEmployer"
        app:layout_constraintTop_toBottomOf="@id/nameEmployer"
        android:layout_marginStart="@dimen/dimen_margin_02"
        android:layout_marginTop="@dimen/dimen_margin_01"
        tools:text= "Setor de Industria Grafica- Asa Sul"
        android:fontFamily="@font/open_sans_light"
        android:textStyle="bold"
        android:textSize="@dimen/text_dimen_02"
        android:layout_marginEnd="@dimen/dimen_margin_02"/>

    <TextView
        android:id="@+id/promotionEmployer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/imageEmployer"
        app:layout_constraintTop_toBottomOf="@id/addresEmployer"
        android:layout_marginStart="@dimen/dimen_margin_02"
        android:layout_marginTop="@dimen/dimen_margin_01"
        tools:text= "10 %"
        android:textColor="@color/colorPrimary"
        android:fontFamily="@font/roboto_bold"
        android:textStyle="bold"
        android:textSize="@dimen/text_dimen_02"
        android:layout_marginEnd="@dimen/dimen_margin_02"/>

    <androidx.viewpager.widget.ViewPager
        android:layout_width="0dp"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@id/promotionEmployer"
        android:layout_marginTop="@dimen/dimen_margin_01"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@color/colorPrimary"/>


</androidx.constraintlayout.widget.ConstraintLayout>